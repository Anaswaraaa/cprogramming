#include<stdio.h>
int main()
{
    int ch=0;
    printf("1.Pizza \n2.Burger\n3.Pasta\n4.French fries\n5.Sandwich\nEnter your choice:");
    scanf("%d",&ch);
    switch(ch)
    {
        case 1: 
        printf("Food item-Pizza \nPize-239");
        break;
        case 2:
        printf("Food item-Burger \nPrize-129");
        break;
        case 3:
        printf("Food item-Pasta \nPrize-179");
        break;
        case 4:
        printf("Food item-French fries \nPrize-99");
        break;
        case5:
        printf("Food item-Sandwich \nPrize-149");
        break;
        default:
            printf("Invalid input");
    }
   return 0;
}
